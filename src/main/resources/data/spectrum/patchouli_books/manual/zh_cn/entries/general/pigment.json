        "spectrum:hidden/collect_pigment/collect_purple_pigment": "$(c_purple)紫色",
        "spectrum:hidden/collect_pigment/collect_red_pigment": "$(c_red)红色",
        "spectrum:hidden/collect_pigment/collect_white_pigment": "$(c_white)白色",
