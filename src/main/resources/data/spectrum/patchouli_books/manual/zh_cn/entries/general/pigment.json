        "spectrum:hidden/collect_pigment/collect_light_gray_pigment": "$(c_light_gray)淡灰色",
        "spectrum:hidden/collect_pigment/collect_lime_pigment": "$(c_lime)黄绿色",
        "spectrum:hidden/collect_pigment/collect_magenta_pigment": "$(c_magenta)品红色",
        "spectrum:hidden/collect_pigment/collect_orange_pigment": "$(c_orange)橙色",
